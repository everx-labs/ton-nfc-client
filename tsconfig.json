{
  "compilerOptions": {
	"paths": {
      "ton-nfc-client": ["./src/index"]
    },
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
	"importsNotUsedAsValues": "error",
    "esModuleInterop": true,
    "isolatedModules": true,
	"noUnusedLocals": true,
    "noUnusedParameters": true,
	"noImplicitReturns": true,
    "jsx": "react",
    "lib": ["es6"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext"
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
